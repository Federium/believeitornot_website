	<style>
		.text-top h1,
		h2,
		h3,
		h4,
		h5,
		h6,
		p,
		a,
		ul {
			color: var(--giallo);
			text-transform: uppercase;
			font-family: "Arial Narrow", Arial, sans-serif;
			line-height: 0.8;
		}

		.text-top h3 {
			text-align: center;
		}

		.title-container {
			height: 100vh;
			height: 100dvh;
			width: 100vw;
			overflow: hidden;
			display: flex;
		}
		.title-svg {
			width: 55vw;
			height: 100vh;
			height: 100dvh;
			padding: 2px;
		}
		.subtitle-container {
			position: absolute;
			bottom: 0;
			width: 100vw;
			overflow: hidden;
			display: flex;
			font-weight: bold;
			font-family: "Arial Narrow Bold", sans-serif;
			font-size: clamp(2rem, 10vw, 4rem);
			filter: blur(1px);
			color: var(--giallo);
			line-height: 95%;
			transform: scaleX(0.7); 
			transform-origin: left; 
			display: inline-block;
		}

		@media (max-width: 768px) {
			.title-container {
				position: fixed;
				width: 100%;
				height: 100vh;
				height: 100dvh;
			}
			.subtitle-container {
				display: none;
			}

			.mobile-bottom-content {
				position: fixed;
				display: flex;
				flex-direction: column;
				width: 100%;
				gap: 2rem;
			}

			.subtitle-mobile {
				display: block;
				text-align: left;
				align-self: flex-start;
				margin-bottom: 0;
			}

			.text-container {
				justify-content: left;
			}
			.text-content {
				width: 100%;
			}
			.text-top {
				padding: 1rem 1rem;
				gap: 0;
				justify-content: space-between;
			}

			.title-svg {
				height: 100vh;
				height: 100dvh;
				width: 100vw;
			}
			.text-bottom {
				margin-bottom: 0;
				text-align: center;
				align-self: center;
			}
			.text-links li {
				gap: 0.5rem;
			}
		}
	</style>
